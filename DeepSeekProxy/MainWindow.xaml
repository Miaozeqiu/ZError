<Window x:Class="DeepSeekProxy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="在浙学网课增强助手"
        Width="800"
        Height="600"
        MinWidth="600"
        MinHeight="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- 顶部导航栏 -->
        <Border Grid.Row="0" Background="{DynamicResource RegionBrush}" Padding="10">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="HomeButton" Content="首页" Width="80" Margin="0,0,10,0"
                        Style="{StaticResource ButtonPrimary}"/>
                <Button x:Name="SettingsButton" Content="设置" Width="80"
                        Style="{StaticResource ButtonInfo}"/>
            </StackPanel>
        </Border>
        
        <!-- 内容区域 -->
        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
