<Page x:Class="DeepSeekProxy.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DeepSeekProxy"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="800"
      Title="首页">

    <Grid Margin="20">
        <StackPanel>
            <!-- 题库配置部分移到最前面 -->
            <TextBlock Text="题库配置（可导入OCS）" 
                      FontSize="24" 
                      Foreground="{DynamicResource PrimaryTextBrush}"
                      Margin="0,0,0,20"/>
            
            <Border Background="{DynamicResource SecondaryRegionBrush}"
                    Padding="15"
                    CornerRadius="5"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBox x:Name="ConfigTextBox"
                            TextWrapping="Wrap"
                            AcceptsReturn="True"
                            Height="200"
                            IsReadOnly="True"
                            FontFamily="Consolas"/>
                    
                    <Button Content="复制配置"
                            Width="120"
                            Height="30"
                            Margin="0,10,0,0"
                            HorizontalAlignment="Right"
                            Style="{StaticResource ButtonPrimary}"
                            Click="CopyConfig_Click"/>
                </StackPanel>
            </Border>

            <!-- API 提供商部分 -->
            <GroupBox Header="API 提供商" Margin="0,0,0,20" Padding="10">
                <StackPanel Margin="10">
                    <ComboBox x:Name="ApiProviderComboBox" Margin="0,0,0,10">
                        <ComboBoxItem Content="DeepSeek 官方 API"/>
                        <ComboBoxItem Content="阿里云百炼 API"/>
                        <ComboBoxItem Content="硅基流动 API"/>
                    </ComboBox>
                </StackPanel>
            </GroupBox>
            
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <Button x:Name="StartButton" Content="启动服务" Width="120" Height="40" Margin="0,0,10,0"/>
                <Button x:Name="StopButton" Content="停止服务" Width="120" Height="40" IsEnabled="False"/>
            </StackPanel>
            
            <Border BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}" Padding="10" Margin="0,0,0,0">
                <TextBlock x:Name="StatusText" Text="服务未启动" FontSize="16" TextWrapping="Wrap" Foreground="{DynamicResource DangerBrush}"/>
            </Border>
        </StackPanel>
    </Grid>
</Page>